  "paths": {
    "/api/v1/users/register": {
      "post": {
        "tags": [
          "users"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "example": true
                    },
                    "message": {
                      "example": "created"
                    },
                    "data": {
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/user"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "otp_number": {
                              "example": 333333
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BadRequestResponse"
                    }
                  ],
                  "properties": {
                    "message": {
                      "oneOf": [
                        {
                          "example": "All fields are required"
                        },
                        {
                          "example": "Email already exists"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/BadRequestResponse"
                    }
                  ],
                  "properties": {
                    "message": {
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
